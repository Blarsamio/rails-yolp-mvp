<div class="container">
  <h1>Create a new restaurant!</h1>

  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %><br>
    <%= f.label :address %><br>
    <%= f.text_area :address, class: 'form-control' %><br>
    <%= f.label :phone_number %><br>
    <%= f.text_area :phone_number, class: 'form-control' %><br>
    <%= f.label :category %><br>
    <%= f.text_field :category, class: 'form-control' %><br>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
  <hr>
  <br><br>
  <%= link_to 'Back to list', '/restaurants' %>
</div>
